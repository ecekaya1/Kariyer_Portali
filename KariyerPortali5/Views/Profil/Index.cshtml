@model KariyerPortali5.Models.Kullanici
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profilim</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Profilim</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <form method="post" action="@Url.Action("Update", "Profil")">
            <div class="form-group mb-3">
                <label for="Isim">Ad</label>
                <input type="text" class="form-control" id="Isim" name="Isim" value="@Model.Isim" required />
            </div>
            <div class="form-group mb-3">
                <label for="Soyisim">Soyad</label>
                <input type="text" class="form-control" id="Soyisim" name="Soyisim" value="@Model.Soyisim" required />
            </div>
            <div class="form-group mb-3">
                <label for="Email">E-posta</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
            </div>
            <div class="form-group mb-3">
                <label for="TelefonNo">Telefon Numarası</label>
                <input type="text" class="form-control" id="TelefonNo" name="TelefonNo" value="@Model.TelefonNo" required />
            </div>
            <div class="form-group mb-3">
                <label for="DogumTarihi">Doğum Tarihi</label>
                <input type="date" class="form-control" id="DogumTarihi" name="DogumTarihi" value="@Model.DogumTarihi.ToString("dd-MM-yyyy")" required />
            </div>
            <div class="form-group mb-3">
                <label for="Yetenekler">Yetenekler</label>
                <textarea class="form-control" id="Yetenekler" name="Yetenekler">@Model.Yetenekler</textarea>
            </div>
            <div class="form-group mb-3">
                <label for="Sifre">Şifre</label>
                <input type="password" class="form-control" id="Sifre" name="Sifre" value="@Model.Sifre" required />
            </div>
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>
