<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Kariyer Portalı</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Dashboard", "SirketHome")">Kariyer Portalı</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "SirketHome")">Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Create", "SirketIlan")">İlanlar Oluştur</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Ilanlarim")">İlanlarım</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Basvurularim")">Başvurularım</a>
                    </li>
                </ul>
                <div class="d-flex">
                    @if (Session["SirketId"] != null)
                    {
                        <a class="btn btn-outline-light me-2" href="@Url.Action("Logout", "SirketLogin")">Çıkış Yap</a>

                        <a class="btn btn-outline-light me-2" href="@Url.Action("Index", "SirketProfil")">Profil</a>

                    }
                    else
                    {

                        <a class="btn btn-outline-light me-2" href="@Url.Action("Index", "SirketLogin")">Giriş Yap</a>

                        <a class="btn btn-outline-light me-2" href="@Url.Action("Index", "SirketRegister")">Kayıt Ol</a>
                    }
                </div>


            </div>
        </div>
    </nav>


    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-4">
        <div class="container">
            <p>&copy; 2024 Kariyer Portalı. Tüm Hakları Saklıdır.</p>
            <p>İletişim: info@kariyerportali.com</p>
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>