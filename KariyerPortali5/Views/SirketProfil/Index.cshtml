@model KariyerPortali5.Models.Sirket
@{ Layout = "~/Views/Shared/SirketLayout.cshtml"; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şirket Profilim</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Şirket Profilim</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

    <form method="post" action="@Url.Action("Update", "SirketProfil")">
        <div class="form-group mb-3">
            <label for="SirketAdi">Şirket Adı</label>
            <input type="text" class="form-control" id="SirketAdi" name="SirketAdi" value="@Model.SirketAdi" required />
        </div>
        <div class="form-group mb-3">
            <label for="WebSite">Web Sitesi</label>
            <input type="url" class="form-control" id="WebSite" name="WebSite" value="@Model.WebSite" required />
        </div>
        <div class="form-group mb-3">
            <label for="Email">E-posta</label>
            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
        </div>
        <div class="form-group mb-3">
            <label for="Sifre">Şifre</label>
            <input type="password" class="form-control" id="Sifre" name="Sifre" value="@Model.Sifre" required />
        </div>
       
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
    </div>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>
