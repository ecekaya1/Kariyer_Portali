@model List<KariyerPortali5.Models.Ilan>
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Başvurularım</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Başvurularım</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        @if (!Model.Any())
        {
            <p>Henüz bir başvuru yapmadınız.</p>
        }
        else
        {
            <ul class="list-group">
                @foreach (var basvuru in Model)
                {
                    <li class="list-group-item">
                        <h5>@basvuru.Sirket.SirketAdi</h5>
                        <p><strong>Pozisyon:</strong> @basvuru.Pozisyon.PozisyonAdi</p>
                        <p><strong>Açıklama:</strong> @basvuru.Aciklama</p>
                    </li>
                }
            </ul>
        }
    </div>
</body>
</html>
